<%= render 'public/header' %>

<main class="mt-5 mb-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-auto">
          <h2 class="bg-primary px-3">ログイン</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label "メールアドレス" %><br />
          <%= f.label "パスワード" %><br />
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
          <%= f.password_field :password, autocomplete: "current-password" %><br>
          <%= f.submit "ログイン" %>
        </div>
      </div>
    </div>
  <% end %>
</main>


