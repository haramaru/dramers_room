<%= render 'admin/header' %>

<main class="mt-5 mb-auto">
  <%= form_with model: @shop, url: admin_shop_path(@shop.id), method: :patch do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-auto">
          <h2 class="bg-secondary px-3">ラーメン屋情報編集</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label "店名" %><br>
          <%= f.label "電話番号" %><br>
          <%= f.label "住所" %><br>
          <%= f.label "ジャンル" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :shop_name %><br>
          <%= f.text_field :telephone_number %><br>
          <%= f.text_field :address %><br>
          <%= f.select :region_genre_id, options_from_collection_for_select(RegionGenre.all, :id, :region) %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.submit '更新' %>
        </div>
      </div>
    </div>
  <% end %>
</main>


