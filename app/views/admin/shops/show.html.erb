<%= render 'admin/header' %>

<main class="mt-5 mb-auto">
  <div class="container">
    <div class="row">
      <h2><%= @shop.shop_name %></h2>
    </div>
    <div class="row my-5">
      <%= image_tag @shop.image, size: "300x300" %>
    </div>
    <div class="row">
      <div class="col-md-2">
        <p>電話番号</p><br>
        <p>住所</p>
      </div>
      <div class="col-md-8">
        <p><%= @shop.telephone_number %></p><br>
        <p><%= @shop.address %></p><br>
        <li class="btn btn-outline-primary">
          <%= link_to "編集", edit_admin_shop_path(@shop.id) %>
        </li>
      </div>
    </div>
  </div>
</main>
