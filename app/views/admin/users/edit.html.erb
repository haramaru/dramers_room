<%= render 'admin/header' %>

<main class="mt-5 mb-auto">
  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-auto">
          <h4 class="bg-secondary px-3"><%= @user.name %>さんの会員情報編集</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <p>会員ID</p><br>
          <div><%= f.label "名前" %></div><br>
          <div><%= f.label "メールアドレス" %></div><br>
          <div><%= f.label "ステータス" %></div>
        </div>
        <div class="col-md-8">
          <p><%= @user.id %></p><br>
          <div><%= f.text_field :name %></div><br>
          <div><%= f.text_field :email %></div><br>
          <div><%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active_true, "有効" %>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active_false, "退会" %></div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.submit "変更を保存" %>
        </div>
      </div>
    </div>
  <% end %>
</main>
