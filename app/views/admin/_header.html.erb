<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <div class="row">
          <div class="col-auto">
            <h6 class="navbar-brand p-3">管理者</h6>
          </div>
          <div class="col-auto p-3">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "ラーメン屋登録", new_admin_shop_path %>
                </li>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "ラーメン屋一覧", admin_shops_path %>
                </li>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "ユーザー一覧", admin_users_path %>
                </li>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "ジャンル一覧", admin_region_genres_path %>
                </li>
               <% else %>
                <li class="nav-item, btn btn-outline-primary">
                  <%= link_to "管理者ログイン", new_admin_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="col-auto p-3">
            <% if admin_signed_in? %>
              <%= form_with url: admin_shops_path, method: :get do |f| %>
                <%= f.text_field :shop_name, placeholder: "キーワードで検索" %>
                <%= f.submit "検索", class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </header>